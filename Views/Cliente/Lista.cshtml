@{
}

<h2>Lista de Clientes</h2>

@if (Model.Count == 0)
{
    <p>No hay clientes registrados.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Apellido</td>
                    <td>@cliente.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
<a href="/Cliente/Agregar">Agregar otro cliente</a>


